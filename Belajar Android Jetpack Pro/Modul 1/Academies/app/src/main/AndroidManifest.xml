<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="me.alhaz.snippet.academies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="me.alhaz.snippet.academies.view.reader.CourseReaderActivity">
        </activity>
        <activity
                android:name="me.alhaz.snippet.academies.view.detail.DetailCourseActivity"
                android:parentActivityName="me.alhaz.snippet.academies.view.home.HomeActivity"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name="me.alhaz.snippet.academies.view.home.HomeActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>